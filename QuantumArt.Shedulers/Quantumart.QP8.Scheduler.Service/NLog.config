<?xml version="1.0" encoding="utf-8" ?>
<nlog
  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
  keepVariablesOnReload="true"
  autoReload="true"
  throwExceptions="false"
  internalLogLevel="Error"
  internalLogFile="c:\logs\nlog-internal.log">

  <variable name="eventId" value="9999" />
  <variable name="udpPort" value="9999" />
  <variable name="appName" value="QP.CommonSheduler" />
  <variable name="logMessage" value="${longdate} - ${level:uppercase=true}: ${message}" />
  <variable name="defaultLogDir" value="c:\logs\${appName}" />
  <variable name="defaultLogPath" value="${defaultLogDir}\current.log" />
  <variable name="defaultArchivePath" value="${defaultLogDir}\archive\archive_${shortdate}.{##}.log" />
  <variable name="eventLogLayout" value="${logMessage}${newline}Callstack: ${callsite:className=true:includeSourcePath=true:methodName=true:fileName=true}${onexception:${newline}${newline}Exception\: ${exception:maxInnerExceptionLevel=10:format=ToString}${newline}${exception:format=Data}${newline}}" />
  <variable name="customerCodeLayout" value="${when:when=length('${mdc:item=customerCode}') &gt; 0:inner=${newline}CustomerCode\:           ${mdc:item=customerCode}}" />

  <variable name="defaultFileLayoutHeader" value="LogEntry #${counter}:            ${logMessage}
${newline}LoggerName:             ${logger}
${newline}PhysicalPath:           ${machinename}::${basedir} [${windows-identity}]
${newline}ProccessInfo:           ${processname:fullName=true} [pid:${processid}]
${customerCodeLayout}" />

  <variable name="defaultFileLayoutBottom" value="------------------------
${newline}${logMessage}
${newline}Callstack: ${callsite:className=true:includeSourcePath=true:methodName=true:fileName=true}
${onexception:${newline}Exception\: ${exception:maxInnerExceptionLevel=10:format=ToString}${newline}${exception:format=Data}}${newline}${newline}" />

  <variable name="defaultFileLayout" value="${defaultFileLayoutHeader}${newline}${defaultFileLayoutBottom}" />

  <targets async="true">
    <default-target-parameters
      xsi:type="File"
      encoding="utf-8"
      createDirs="true"
      keepFileOpen="false"
      archiveEvery="Day"
      maxArchiveFiles="20"
      archiveAboveSize="25000000"
      writeFooterOnArchivingOnly="true"
      archiveNumbering="DateAndSequence"
      enableArchiveFileCompression="false" />

    <target xsi:type="BufferingWrapper" name="users" bufferSize="15" flushTimeout="1500" >
      <target xsi:type="File" archiveOldFileOnStartup="true"
              header="Log was created at ${longdate}${newline}"
              footer="Log was archived at ${longdate}"
              layout="${defaultFileLayout}"
              fileName="${defaultLogDir}\users.log"
              archiveFileName="${defaultLogDir}\archive\users\archive_${shortdate}.{##}.log" />
    </target>

    <target xsi:type="BufferingWrapper" name="notifications" bufferSize="15" flushTimeout="1500" >
      <target xsi:type="File" archiveOldFileOnStartup="true"
              header="Log was created at ${longdate}${newline}"
              footer="Log was archived at ${longdate}"
              layout="${defaultFileLayout}"
              fileName="${defaultLogDir}\notifications.log"
              archiveFileName="${defaultLogDir}\archive\notifications\archive_${shortdate}.{##}.log" />
    </target>

    <target xsi:type="BufferingWrapper" name="default" bufferSize="15" flushTimeout="1500" >
      <target xsi:type="File" archiveOldFileOnStartup="true"
              header="Log was created at ${longdate}${newline}"
              footer="Log was archived at ${longdate}"
              layout="${defaultFileLayout}"
              fileName="${defaultLogDir}\current.log"
              archiveFileName="${defaultArchivePath}" />
    </target>

    <target xsi:type="SplitGroup" name="prtg">
      <target xsi:type="FilteringWrapper" condition="starts-with('${message}','PRTG Ok.')">
        <target xsi:type="WebService" url="http://mscmonitor01:5050/qp.articlescheduler.mscdev02?content=&lt;prtg&gt;&lt;result&gt;&lt;channel&gt;MyChannel&lt;/channel&gt;&lt;value&gt;23&lt;/value&gt;&lt;/result&gt;&lt;text&gt;OK&lt;/text&gt;&lt;/prtg&gt;" protocol="HttpGet" encoding="UTF-8" />
      </target>

      <target xsi:type="FilteringWrapper" condition="starts-with('${message}','PRTG Error.')">
        <target xsi:type="WebService" url="http://mscmonitor01:5050/qp.articlescheduler.mscdev02?content=&lt;prtg&gt;&lt;error&gt;1&lt;/error&gt;&lt;text&gt;FAIL&lt;/text&gt;&lt;/prtg&gt;" protocol="HttpGet" encoding="UTF-8" />
      </target>
    </target>

    <target xsi:type="EventLog" name="usersEventlog" log="Application" eventId="${eventId}" source="qp8.users" onOverflow="Truncate" layout="${eventLogLayout}" />
    <target xsi:type="EventLog" name="notificationsEventlog" log="Application" eventId="${eventId}" source="qp8.notification" onOverflow="Truncate" layout="${eventLogLayout}" />
    <target xsi:type="NLogViewer" name="udp" includeSourceInfo="true" address="udp://127.0.0.1:${udpPort}" />
  </targets>

  <rules>
    <logger name="*" writeTo="prtg" minlevel="Trace" />
    <logger name="*" writeTo="udp" minlevel="Trace" />
    <logger name="Quantumart.QP8.Scheduler.Users*" writeTo="usersEventlog" minlevel="Error" />
    <logger name="Quantumart.QP8.Scheduler.Notification*" writeTo="notificationsEventlog" minlevel="Error" />
    <logger name="Quantumart.QP8.Scheduler.Users*" writeTo="users" minlevel="Info" final="true" />
    <logger name="Quantumart.QP8.Scheduler.Notification*" writeTo="notifications" minlevel="Info" final="true" />
    <logger name="*" writeTo="default" minlevel="Info" />
  </rules>
</nlog>
