<?xml version="1.0"?>
<configuration>
  <appSettings file="testsdata.config">
    
    <!-- Common settings -->
    <add key="IsSmokeTests" value="true" />
    
    <!-- Selenium Grid settings -->
    <add key="GridHubHost" value="localhost" />
    <add key="GridHubPort" value="4444" />

    <!-- Selenium timeouts settings in milliseconds -->
    <add key="PageLoadTimeout" value="25000" />
    <add key="ImplicitlyTimeout" value="2000" />
    <add key="JavaScriptTimeout" value="10000" />
    
    <!-- Allure settings -->
    <add key="AllureResultsPath" value="${BuildPath}AllureResults" />

  </appSettings>
</configuration>