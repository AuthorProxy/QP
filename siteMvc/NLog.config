<?xml version="1.0" encoding="utf-8" ?>
<nlog
  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
  autoReload="true"
  throwExceptions="false"
  internalLogLevel="Error"
  internalLogToTrace="true"
  internalLogIncludeTimestamp="true"
  internalLogFile="c:\temp\nlog-internal.log">

  <variable name="eventId" value="9999" />
  <variable name="udpPort" value="9999" />
  <variable name="appName" value="QP.WebUI" />
  <variable name="mainLogPath" value="${basedir}/logs/current.log" />
  <variable name="archiveLogPath" value="${basedir}/logs/archive/archive_${shortdate}.{##}.log" />
  <variable name="eventLogLayout" value="${longdate} - ${level:uppercase=true}: ${message}${newline}Callstack: ${callsite:className=true:includeSourcePath=true:methodName=true:fileName=true}${onexception:${newline}${newline}Exception\: ${exception:maxInnerExceptionLevel=10:format=ToString}${newline}${exception:format=Data}${newline}}" />
  <variable name="mvcFileLayout" value="Instance:               ${iis-site-name}:${identity}
${newline}Request:                ${when:when=length('${mdc:item=httpErrorCode}') > 0:inner=[${mdc:item=httpErrorCode}] }${aspnet-request-method} ${aspnet-request-url:IncludePort=true:IncludeQueryString=true} (${aspnet-request:header=Content-Type})
${newline}UserAgent:              ${aspnet-request-useragent}
${newline}SessionId:              ${aspnet-sessionid}
${newline}QpAuth:                 ${aspnet-request-cookie:CookieNames=QPAUTH}" />

  <variable name="defaultFileLayout" value="${longdate} - ${level:uppercase=true}: ${message}
${newline}Callstack: ${callsite:className=true:includeSourcePath=true:methodName=true:fileName=true}
${onexception:${newline}Exception\: ${exception:maxInnerExceptionLevel=10:format=ToString}${newline}${exception:format=Data}${newline}}
${newline}${newline}" />

  <variable name="qpFileLayout" value="LogEntry #${counter}
${newline}LoggerName:             ${logger}
${newline}ProccessInfo:           pid:${processid} for ${processname:fullName=true} [${windows-identity}] at ${machinename}:${basedir}
${newline}CustomerCode:           ${mdc:item=customerCode}
${newline}${mvcFileLayout}
${newline}${defaultFileLayout}" />

  <targets async="true">
    <default-target-parameters
      xsi:type="File"
      encoding="utf-8"
      createDirs="true"
      keepFileOpen="false"
      archiveFileName="${archiveLogPath}"
      archiveOldFileOnStartup="false"
      archiveEvery="Day"
      archiveAboveSize="5000000"
      archiveNumbering="DateAndSequence"
      maxArchiveFiles="20"
      writeFooterOnArchivingOnly="true"
      header="Log was created at ${longdate}"
      footer="Log was archived at ${longdate}"
      layout="LogEntry #${counter}
${newline}LoggerName:             ${logger}
${newline}ProccessInfo:           pid:${processid} ${processname:fullName=true} [${windows-identity}] at ${machinename}:${basedir}
${newline}CustomerCode:           ${mdc:item=customerCode}
${newline}${defaultFileLayout}" />

    <target xsi:type="BufferingWrapper" name="web" bufferSize="15" flushTimeout="3000" >
      <target xsi:type="File" fileName="${mainLogPath}" layout="${qpFileLayout}" />
    </target>

    <target xsi:type="BufferingWrapper" name="default" bufferSize="15" flushTimeout="3000" >
      <target xsi:type="File" fileName="${mainLogPath}"/>
    </target>

    <target xsi:type="EventLog" name="eventlog" log="Application" eventId="${eventId}" source="${appName}" onOverflow="Truncate" layout="${eventLogLayout}" />
    <target xsi:type="NLogViewer" name="udp" includeSourceInfo="true" address="udp://127.0.0.1:${udpPort}" />
  </targets>

  <rules>
    <logger name="*" writeTo="udp" minlevel="Trace" />
    <logger name="*" writeTo="eventlog" minlevel="Error" />
    <logger name="Quantumart.QP8.WebMvc*" writeTo="web" minlevel="Info" final="true" />
    <logger name="*" writeTo="default" minlevel="Info" />
  </rules>
</nlog>
